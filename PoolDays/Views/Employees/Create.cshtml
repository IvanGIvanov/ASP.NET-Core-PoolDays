@model BecomeEmployeeFormModel

@{ ViewBag.Title = "Complete Application "; }

<div class="container"
    <div class="row">
        <div class="col-md-8 offset-md-2 col-sm-12">
            <h2 class="text-center">Complete application</h2>
            <div class="text-center text-danger mt-3 mb-3" >
                <br />To add or edit pool you must be our employee. Please complete the application to become an employee.
            </div>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Your name">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+359 111 111 111">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>

                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
