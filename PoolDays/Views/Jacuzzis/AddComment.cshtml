@model CommentFormModel

<div class="container"
    <div class="row">
        <div class="col-md-8 offset-md-2 col-sm-12">
            <h2 class="text-center mb-4">Add Pool Form</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Text"></label>
                    <input asp-for="Text" class="form-control" placeholder="Your comment here:">
                    <span asp-validation-for="Text" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductRankting"></label>
                    <input asp-for="ProductRankting" class="form-control" placeholder="Enter rank">
                    <span asp-validation-for="ProductRankting" class="small text-danger"></span>

                </div>
                <input class="btn btn-primary mt-3" type="submit" value="Send" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />}