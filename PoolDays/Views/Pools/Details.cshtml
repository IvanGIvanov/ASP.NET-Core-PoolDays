@model PoolFormModel

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <form>
        <div>
            <img src="@Model.ImageUrl" alt="Pool Image" />
        </div>
    </form>
    <form>
        <div>
            <dl class="row">
                <dt class="col-sm-3">Manufacturer</dt>
                <dd class="col-sm-6">@Model.Manufacturer</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Model</dt>
                <dd class="col-sm-6">@Model.Model</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-6">@Model.Description</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Volume</dt>
                <dd class="col-sm-6">@Model.Volume</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Height</dt>
                <dd class="col-sm-6">@Model.Height sm</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Length</dt>
                <dd class="col-sm-6">@Model.Length sm</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Width</dt>
                <dd class="col-sm-6">@Model.Width sm</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-6">@Model.Price LV</dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-3">PumpIncluded</dt>
                @{
                    @if (Model.PumpIncluded == false)
                    {
                        <dd class="col-sm-6">No</dd>
                    }
                    @if (Model.PumpIncluded == true)
                    {
                        <dd class="col-sm-6">Yes</dd>
                    }
                }
            </dl>
            <dl class="row">
                <dt class="col-sm-3">Stairway Included</dt>
                @{
                    @if (Model.Stairway == false)
                    {
                        <dd class="col-sm-6">No</dd>
                    }
                    @if (Model.Stairway == true)
                    {
                        <dd class="col-sm-6">Yes</dd>
                    }
                }
            </dl>
            <div>
                <a asp-controller="Pools" asp-action="AddComment" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-comment"></i> Add to comment</a>

                <a asp-controller="Pools" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-cart-plus"></i> Buy</a>
                <dl>
                    <h2>Comments:</h2>
                    @{ if (!Model.Comments.Any())
                                    {
                        <h4>No comments found! You can write the first one.</h4> }
                                    else
                                    {
                                        foreach (var comment in Model.Comments)
                                        {
                        <h3>@comment.UserName</h3>
                                            <h4>@comment.Text</h4>
                                                                <label>Rating: @comment.Rating</label> }
                                                                            } }
                </dl>
            </div>
        </div>
    </form>    
        
