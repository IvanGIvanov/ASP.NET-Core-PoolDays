@model AddPoolFormModel

@{
    ViewData["Title"] = "Add Pool In PoolDays";
}

<div class="container"
    <div class="row">
        <div class="col-md-8 offset-md-2 col-sm-12">
            <h2 class="text-center">Add Pool Form</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Manufacturer"></label>
                    <input asp-for="Manufacturer" class="form-control" placeholder="Intex">
                </div>
                <div class="form-group">
                    <label asp-for="Model"></label>
                    <input asp-for="Model" class="form-control" placeholder="26329EH">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter description up to 3000 symbols"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Volume"></label>
                    <input asp-for="Volume" class="form-control" placeholder="Enter number value between 1 and 199">
                </div>
                <div class="form-group">
                    <label asp-for="Height"></label>
                    <input asp-for="Height" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Width"></label>
                    <input asp-for="Width" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Depth"></label>
                    <input asp-for="Depth" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Diameter"></label>
                    <input asp-for="Diameter" class="form-control">
                </div>
                <div class="form-check">
                    <label asp-for="PumpIncluded">
                        <input asp-for="PumpIncluded" type="checkbox" class="form-check-input" value="">Pump Included
                    </label>
                </div>
                <div class="form-check">
                    <label asp-for="Stairway">
                        <input asp-for="Stairway" type="checkbox" class="form-check-input" value="">Stairway
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Example select</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
